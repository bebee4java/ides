<assembly>
  <id>dist</id>
  <formats>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <files>
    <file>
      <source>${session.root.dir}/README.md</source>
      <outputDirectory>ides-${project.version}-bin</outputDirectory>
      <destName>README.md</destName>
      <filtered>true</filtered>
    </file>
  </files>

  <fileSets>
    <fileSet>
      <directory>
        ${session.root.dir}/bin/
      </directory>
      <outputDirectory>ides-${project.version}-bin/bin</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <directory>
        ${session.root.dir}/jars/
      </directory>
      <outputDirectory>ides-${project.version}-bin/jars</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>
        ${session.root.dir}/python/
      </directory>
      <outputDirectory>ides-${project.version}-bin/python</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>

</assembly>
